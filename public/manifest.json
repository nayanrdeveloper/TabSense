{
    "manifest_version": 3,
    "name": "TabSense",
    "version": "1.0.0",
    "description": "Smart Tab Memory & Focus Optimizer",
    "permissions": [
        "tabs",
        "storage",
        "system.memory",
        "scripting",
        "alarms",
        "tabGroups"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}